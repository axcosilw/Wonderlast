<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Listing Details:</h3>
    </div>
    <div class="card col-6 offset-3 show-card ">
        <img src="<%=listing.image %>" class="card-img-top show-img" alt="listing-img">
        <div class="card-body">
           <p class="card-text">
            <b>&bull;&nbsp;<%=listing.title %></b> <br>
            &bull;&nbsp;<%=listing.description %> <br>
            &bull;&nbsp;&#8377;<%=listing.price.toLocaleString("en-IN") %> <br>
            &bull;&nbsp;<%=listing.location%> <br>
            &bull;&nbsp;<%=listing.country%> <br>
           </p>
        </div>
    </div> 
     <br>

    <!-- edit -->
    <div class="btns">
     <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3" >Edit</a>
    <!-- delete -->
     <form method="post" action="/listings/<%=listing._id%>?_method=delete">
        <button class="btn btn-dark  offset-5" >Delete </button>
     </form>
     </div>



 </div>



