<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3><%=listing.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card ">
        <img src="<%=listing.image %>" class="card-img-top show-img" alt="listing-img">
        <div class="card-body">
           <p class="card-text">

            &nbsp;<%=listing.description %> <br>
            &nbsp;&#8377;<%=listing.price.toLocaleString("en-IN") %> <br>
            &nbsp;<%=listing.location%> <br>
            &nbsp;<%=listing.country%> <br>
           </p>
        </div>
    </div> 
     <br>

    <!-- edit -->
    <div class="btns">
     <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3" >Edit</a>
    <!-- delete -->
     <form method="post" action="/listings/<%=listing._id%>?_method=delete">
        <button class="btn btn-dark  offset-5" >Delete </button>
     </form>
     </div>

    <div class="col-8 offset-3 mb-3">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listing.id%>/reviews" method="post">
            <div>
                <label for="rating" class="form-label">Rating</label> &nbsp;
                <input type="Range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div>
                <label for="comment" class="form-label">Comments:-</label><br>
                <textarea name="review[comment]" id="comment" cols="30" rows="2" class="form-control"></textarea><br>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>

 </div>



